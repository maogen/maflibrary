<?xml version="1.0" encoding="utf-8"?>

<com.maf.views.ZoomImageView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zoomImageView"
    android:layout_width="200dp"
    android:layout_height="130dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@color/half_trans_black"
        android:scaleType="matrix" />

    <ImageView
        android:id="@+id/image_sign_zoom"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/sign_zoom" />

    <ImageView
        android:id="@+id/image_sign_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/sign_closed" />
</com.maf.views.ZoomImageView>
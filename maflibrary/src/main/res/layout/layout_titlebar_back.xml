<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_title_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/titlebar_background">

    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/image_title_back"
        style="@style/TitleIconStyle"
        android:src="@drawable/title_bar_back" />

    <!-- 界面标题 -->
    <TextView
        android:id="@+id/text_product_title"
        style="@style/TitleTextStyle"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
